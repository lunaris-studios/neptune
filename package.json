{
  "name": "nucleus-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/mdlz-prmtz"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bundle": "lerna run --parallel bundle",
    "compile": "lerna run compile",
    "clean": "npm-run-all clean:packages clean:root",
    "clean:packages": "lerna run --parallel clean",
    "clean:root": "rm -rf ./*-debug* && rm -rf ./node_modules",
    "dev": "run-s bootstrap dev:core",
    "dev:core": "lerna run dev --parallel --scope \"@nucleus/{system,core,icons,protocol}\"",
    "dist": "run-s dist:libs dist:apps",
    "dist:libs": "lerna run dist --parallel --scope \"@blueprintjs/{core,datetime,docs-theme,icons,select,table,timezone}\"",
    "dist:apps": "lerna run dist --parallel --scope \"@blueprintjs/{docs-app,landing-app,table-dev-app}\"",
    "format": "prettier --write \"./**/*.{ts,tsx}\"",
    "format-check": "prettier --check \"./**/*.{ts,tsx}\"",
    "link": "lerna link",
    "lint": "lerna run --parallel lint",
    "lint-fix": "lerna run --parallel lint-fix",
    "start": "npm run dev",
    "test": "lerna run --parallel test",
    "verify": "npm-run-all -s compile dist:libs dist:apps -p test lint"
  },
  "devDependencies": {
    "@types/history": "^4.7.6",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.1.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "5.1.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna exec --scope @nucleus/core -- yalc check"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}

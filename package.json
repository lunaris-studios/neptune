{
  "name": "nucleus-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/mdlz-prmtz"
    ]
  },
  "scripts": {
    "init": "npm run system:build && npm run core:build",
    "start": "npm-run-all --parallel system nucleus core:storybook website",
    "dev": "lerna run dev --parallel --scope \"@nucleus/*\"",
    "dev:core": "lerna run dev --parallel --scope \"(@nucleus/{syste,core,icons}|website)\"",
    "build": "npm-run-all --parallel build:*",
    "build:icons": "lerna run build --scope @nucleus/icons",
    "prettier": "prettier './**/*.{js,jsx,ts,tsx,json,yml,yaml,css,md,mdx}' --write",
    "lint": "eslint './packages/**/*.{js,jsx,ts,tsx}'",
    "bootstrap": "lerna bootstrap",
    "bootstrap:packages": "lerna exec --parallel -- npm install",
    "bootstrap:root": "npm install && lerna bootstrap",
    "clean": "npm-run-all clean:packages clean:root",
    "clean:packages": "lerna run --parallel clean",
    "clean:root": "rm -rf ./*-debug* && rm -rf ./node_modules",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.1.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "5.1.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna exec --scope @nucleus/core -- yalc check"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
